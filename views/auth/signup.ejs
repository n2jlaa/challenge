<div class="container">
  <div class="mr-auto col-8">
    <form action="/auth/signup" method="POST">
      <div class="row">
        <div class="col-12">
          <label for="inputAddress">Full Name</label>
          <input
            type="text"
            class="form-input"
            name="name"
            placeholder="Full Name"
          />
          <div class="row">
            <div class="col-6">
              <label for="inputAddress">Age</label>
              <input type="age" class="form-input" name="age" />
            </div>
        </div>
        <div class="row">
          <div class="col-12">
            <label for="inputAddress">Address</label>
            <input
              type="text"
              class="form-input"
              id="inputAddress"
              name="address"
              placeholder="1234 Main St"
            />
          </div>
        <div class="col-6">
          <label for="inputAddress">Password</label>
          <input
            type="password"
            class="form-input"
            name="password"
            placeholder="Password"
          />
        </div>
      </div>
      <div class="row">
        <div class="col-12">
          <label for="inputAddress">Phone Number</label>
          <input
            type="text"
            class="form-input"
            id="inputAddress"
            name="phone"
            placeholder="+966 560000000"
          />
        </div>   
        <div class="col-6">
          <label for="inputAddress">Account Type</label>
          <select name="userType" class="form-input">
            <option value="senior">Senior</option>
            <option value="helper">Helper</option>
          </select>
        </div>
      </div>
      <div class="row">
        <button class="btn btn-primary" type="submit">Signup</button>
      </div>
    </form>
  </div>
</div>